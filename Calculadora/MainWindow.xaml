        <Button x:Name="btnNumero7" Content="7" Margin="17,283,0,0" VerticalAlignment="Top" Height="100" HorizontalAlignment="Left" Width="100" Background="#7F0C0C0C" FontFamily="Leelawadee" Foreground="#FFD2D2D2" BorderBrush="#7F0C0C0C" FontSize="35" Click="NumeroApertado" IsTabStop="False" Focusable="False"/>
        <Button x:Name="btnNumero1" Content="1" Margin="17,493,0,0" VerticalAlignment="Top" Height="100" HorizontalAlignment="Left" Width="100" Background="#7F0C0C0C" FontFamily="Leelawadee" Foreground="#FFD2D2D2" BorderBrush="#7F0C0C0C" FontSize="35" Click="NumeroApertado" IsTabStop="False" Focusable="False"/>
        <Button x:Name="btnNumero4" Content="4" Margin="17,388,0,0" VerticalAlignment="Top" Height="100" HorizontalAlignment="Left" Width="100" Background="#7F0C0C0C" FontFamily="Leelawadee" Foreground="#FFD2D2D2" BorderBrush="#7F0C0C0C" FontSize="35" Click="NumeroApertado" IsTabStop="False" Focusable="False"/>
        <Button x:Name="btnC" Content="C" Margin="123,179,0,0" VerticalAlignment="Top" Height="100" HorizontalAlignment="Left" Width="100" Background="#7F0C0C0C" FontFamily="Leelawadee" Foreground="#FFD2D2D2" BorderBrush="#7F0C0C0C" FontSize="35" Click="LimparTudo" IsTabStop="False" Focusable="False"/>
        <TextBlock x:Name="txtNumeroAtual" TextAlignment="Right" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="87" Width="406" Foreground="#FFD2D2D2" FontFamily="Leelawadee" FontSize="70" FontStretch="Normal" Margin="20,56,0,0"/>
        <TextBlock x:Name="txtNumeroAnterior" TextAlignment="Right" HorizontalAlignment="Left" Margin="20,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="42" Width="406" Foreground="#7FD2D2D2" FontFamily="Leelawadee" FontSize="35"/>
        <Button x:Name="btnFoco" Content="       " HorizontalAlignment="Left" Margin="-46,56,0,0" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" Width="47"/>
