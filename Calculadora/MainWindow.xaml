        <Button x:Name="btnNumero0" Content="0" Margin="123,598,0,0" VerticalAlignment="Top" Height="100" HorizontalAlignment="Left" Width="100" Background="#7F0C0C0C" FontFamily="Leelawadee" Foreground="#FFD2D2D2" BorderBrush="#7F0C0C0C" FontSize="35" Click="NumeroApertado" IsTabStop="False" Focusable="False"/>
